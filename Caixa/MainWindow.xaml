<Window
    x:Class="Caixa.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:componentes="clr-namespace:Caixa.Componentes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Caixa"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Caixa ER"
    Width="800"
    Height="350"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="40,20,0,0" 
            Style="{StaticResource MaterialDesignHeadline4TextBlock}"
            Text="Caixa" />
        <Separator />
        <componentes:Status />
        <DataGrid Name="DgTipos" Style="{DynamicResource DataGridCentralizado}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Data}" Header="Data" />
                <DataGridTextColumn Binding="{Binding Cte}" Header="Cte" />
                <DataGridTextColumn Binding="{Binding Cliente}" Header="Cliente" />
                <DataGridTextColumn Binding="{Binding TipoValor}" Header="Lançamento" />
                <DataGridTextColumn Binding="{Binding valor, StringFormat='C'}" Header="Valor" />
                <DataGridTextColumn Binding="{Binding TipoDoc}" Header="Tipo Documento" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>