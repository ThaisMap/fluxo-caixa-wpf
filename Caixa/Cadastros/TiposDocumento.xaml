<UserControl
    x:Class="Caixa.Cadastros.TiposDocumento"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Caixa.Cadastros"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="40,20,0,0"
            Style="{StaticResource MaterialDesignHeadline4TextBlock}"
            Text="Tipos de documento" />
        <Separator />
        <StackPanel
            Margin="0,10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBox
                Name="Descricao"
                Width="350"
                Margin="0,10,0,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                materialDesign:HintAssist.Hint="Descrição"
                materialDesign:HintAssist.IsFloating="True" />
            <Button
                x:Name="BtnAdicionar"
                Width="auto"
                Margin="10,5,5,5"
                VerticalAlignment="Bottom"
                Content="Adicionar"
                IsDefault="True" />
        </StackPanel>
        <DataGrid Name="DgTipos" Style="{DynamicResource DataGridCentralizado}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Descricao}" Header="Tipos de documento" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
